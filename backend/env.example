# ===========================================
# Oblepiha VPN Backend Configuration
# ===========================================

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Database (SQLite) - путь относительно backend/
DATABASE_URL=sqlite+aiosqlite:///./data/oblepiha.db

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Username бота (без @) - используется для реферальных ссылок и редиректов
TELEGRAM_BOT_USERNAME=oblepiha_vpn_bot

# Remnawave Panel
REMNAWAVE_API_URL=https://your-panel-domain.com
REMNAWAVE_API_TOKEN=your_bearer_token_here

# Remnawave User Defaults
# Squad ID для пользователей Облепиха VPN
REMNAWAVE_SQUAD_ID=406c6e73-489d-4d38-8868-4af594bb6a86
# External Squad ID (для кастомного названия подписки в Happ)
REMNAWAVE_EXTERNAL_SQUAD_ID=57b26d07-7e40-462a-b006-871d5a730b46
# Лимит трафика в байтах (500 GB = 536870912000)
REMNAWAVE_TRAFFIC_LIMIT_BYTES=536870912000
# Стратегия сброса: NO_RESET, DAY, WEEK, MONTH
REMNAWAVE_TRAFFIC_RESET_STRATEGY=MONTH
# Лимит устройств
REMNAWAVE_HWID_DEVICE_LIMIT=15

# YooKassa
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key
# YOOKASSA_RETURN_URL формируется автоматически из TELEGRAM_BOT_USERNAME

# Frontend URL (для CORS)
FRONTEND_URL=https://oblepiha-app.ru

